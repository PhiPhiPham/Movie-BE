{
  "info": {
    "name": "Movie Discovery Service",
    "_postman_id": "c0a7af43-2ecc-4525-8d10-collection",
    "description": "Endpoints for the Movie Discovery backend.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"viewer1@movie.test\",\n  \"password\": \"changeme\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Genres - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/genres?page=1&pageSize=10",
          "host": ["{{baseUrl}}"],
          "path": ["genres"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "pageSize", "value": "10" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Movies - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/movies?country=US&pageSize=10&sort=-year",
          "host": ["{{baseUrl}}"],
          "path": ["movies"],
          "query": [
            { "key": "country", "value": "US" },
            { "key": "pageSize", "value": "10" },
            { "key": "sort", "value": "-year" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Saved Movies - List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/saved-movies?country=US&pageSize=10",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{userId}}", "saved-movies"],
          "query": [
            { "key": "country", "value": "US" },
            { "key": "pageSize", "value": "10" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Saved Movies - Save",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"movieId\": 42,\n  \"country\": \"US\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/saved-movies",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{userId}}", "saved-movies"]
        }
      },
      "response": []
    },
    {
      "name": "Saved Movies - Delete",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{userId}}/saved-movies/{{movieId}}",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{userId}}", "saved-movies", "{{movieId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "userId", "value": "1" },
    { "key": "movieId", "value": "42" },
    { "key": "token", "value": "" }
  ]
}
